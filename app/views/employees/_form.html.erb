<%= simple_form_for @employee, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Employee</legend>
		
		<%= f.input :first_name %>
		<%= f.input :last_name %>
		<%= f.input :ssn, :label => "SSN" %>
		<%= f.input :date_of_birth, :label => "Date of Birth", :as => :date, :start_year => Date.today.year - 13, :end_year => Date.today.year - 75, :order => [:month, :day, :year], :include_blank => true %>
		<%= f.input :phone %>
		<%= f.input :role, :collection => Employee::ROLES_LIST %>
		<%= f.input :active %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', employees_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
