<div class="field">
	<%= f.label :email, "Email Address" %><br/>
	<%= f.text_field :email %>
</div>

<div class="field">
	<%= f.label :password %><br/>
	<%= f.password_field :password %>
</div>

<div class="field">
	<%= f.label :password_confirmation, "Confirmation Password" %><br/>
	<%= f.password_field :password_confirmation %>
</div>

<div class="field">
	<%= f.submit :class => "btn" %>
</div>