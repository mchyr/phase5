<div id="container">
	<br>
	<p id= "notice"><%= notice %></p>

<h1>Assignment Details:</h1>

<p>
	<b>Store:&nbsp;&nbsp;</b>
	<%= link_to @assignment.store.name, store_path(@assignment.store) %>
</p>

<p>
	<b>Employee:&nbsp;&nbsp;</b>
	<%= link_to @assignment.employee.name, employee_path(@assignment.employee) %>
</p>

<p>
	<b>Start Date:&nbsp;&nbsp;</b>
	<%= @assignment.start_date.strftime("%m/%d/%y") %>
</p>
 
 <p>
	<b>End Date:&nbsp;&nbsp;</b>
	<% "#{(@assignment.end_date.nil?)? "None" : "#{(@assignment.end_date).strftime("%m/%d/%y")}"}" %>
</p>

<%= link_to 'Edit', edit_assignment_path(@assignment) %> |
<%= link_to 'Back', assignments_path %> |
<%= link_to 'Delete', @assignment, :confirm => 'Are you sure?', :method => :delete %>

</div>