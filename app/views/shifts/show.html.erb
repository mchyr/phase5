<div id="container">
	<br>
	<p id="notice"><%= notice %></p>
	<p class="supertiny"></p>

<table>
<thead>
<th>Shift Details</th>
</thead>

<tr>
  <td><b>Assignment:</b>
  <%= link_to @shift.assignment.employee.proper_name, employee_path(@shift.assignment.employee) %> at 
  <%= link_to @shift.assignment.store.name, employee_path(@shift.assignment.store) %></td>
</tr>

<tr>
  <td><b>Date:</b>
  <%= @shift.date %></td>
</tr>

<tr>
  <td><b>Time:</b>
  <%= @shift.start_time.localtime.strftime("%l:%M %p") %> - <%= @shift.end_time.localtime.strftime("%l:%M %p") %></td>
</tr>

<tr>
  <td><b>Notes:</b>
  <%= @shift.notes %></td>
</tr>
</table>

<table>
	<thead>
	<th>Jobs Performed</th>
	<th></th>
	</thead>

	<thead>
	<th>Name</th>
	<th></th>
	</thead>

	<% if @shift.jobs.size > 0 %>
		<% @shift.jobs.each do |job| %>
	    <tr>
	      <td><%= job.name %></td>
	      <td><%= link_to 'Details', job_path(job), :class=>"btn" %></td>
	    </tr>
	  <% end %>
	<% else %>
		<tr>
      <td>None</td>
      <td></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Edit', edit_shift_path(@shift), :class => "btn"%>
<%= link_to 'Back', shifts_path, :class => "btn" %>

</div>